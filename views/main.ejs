<script type="text/javascript">
    //userInfo form 제출 시, 호출되는 함수
    function checkInput() {
        var loginForm = document.userInfo;
        var nick = loginForm.nick.value;
        var email = loginForm.email.value;

        if(!nick || !email) return false;
        else return true;
    }

    function submitInfo() {
        if(checkInput()){
            var queryString = $("form[name=userInfo]").serializeArray();
            $.ajax({
                type: 'post',
                url: '/Intro',
                data: queryString,
                dataType: 'JSON',
            })
            .done(function (result){
                if(result.msg == "email-error"){
                    alert("이미 가입된 이메일입니다.");
                }else if(result.msg == 'nick-error'){
                    alert("이미 존재하는 닉네임입니다.");
                }else if(result.msg == 'error'){
                    alert("Error!");
                }else if(result.msg == "success"){
                    location.href = "/startTest";
                }else if(result.msg == "login"){
                    location.href = "/Main";
                }
            })
            .fail(function (xhr, status, error){
                alert("error");
            })
        }else{
            alert("값을 입력해주세요");
        }
    }
</script>